{
    "compilerOptions": {
      "target": "ES2020",    
      "types": ["mdx", "node"],                      
      "module": "Node16",                          
      "lib": ["DOM", "DOM.Iterable", "ESNext"],    
      "jsx": "react-jsx",                          
      "declaration": true,                         
      "declarationMap": true,                      
      "sourceMap": true,                           
      "outDir": "dist",                            
      "strict": true,                              
      "moduleResolution": "node16",
      "resolveJsonModule": true,                   
      "isolatedModules": true,                     
      "esModuleInterop": true,                    
      "skipLibCheck": true,                        
      "forceConsistentCasingInFileNames": true     
    },
    "include": ["src", "new"],
    "exclude": ["node_modules", "dist"]
}